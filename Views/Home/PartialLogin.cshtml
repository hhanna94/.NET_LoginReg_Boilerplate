@model LoginUser

<div style="width: 40%">
    <h1 class="text-center">Login</h1>
    <form action="/users/login" method="post" class="mt-3">
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="LoginEmail"></label>
            <input asp-for="LoginEmail" class="form-control">
        </div>
        <span asp-validation-for="LoginEmail" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-3 p-0" asp-for="LoginPassword"></label>
            <input asp-for="LoginPassword" class="form-control">
        </div>
        <span asp-validation-for="LoginPassword" class="text-danger"></span>
        <div class="d-flex justify-content-center"><input type="submit" value="Login" class="btn btn-info mt-3"></div>
    </form>
</div>