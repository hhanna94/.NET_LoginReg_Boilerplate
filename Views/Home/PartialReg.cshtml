@model User

<div style="width: 50%">
    <h1 class="text-center">Registration</h1>
    <form action="/users/create" method="post" class="mt-3">
        <div class="d-flex gap-3 align-items-center">
            <label class="col-4 p-0" asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control">
        </div>
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-4 p-0" asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control">
        </div>
        <span asp-validation-for="LastName" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-4 p-0" asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-4 p-0" asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="d-flex gap-3 align-items-center mt-3">
            <label class="col-4 p-0" asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control">
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
        <div class="d-flex justify-content-center"><input type="submit" value="Register" class="btn btn-primary mt-3"></div>
    </form>
</div>